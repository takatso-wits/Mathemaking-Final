<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7d00a"
    tools:context=".AlphieCombinations"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alphie_notes"
                    android:onClick="startAlphieNotes"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alphie_examples"
                    android:onClick="startAlphieExamples"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Notes"
                    android:textSize="18sp"
                    android:textColor="#837d4e"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Examples"
                    android:textColor="#837d4e"
                    android:textSize="18sp"
                    android:gravity="center"

                    />
            </TableRow>

            <TableRow>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alphie_excercises"
                    android:id="@+id/btnAlphieExercise"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_notes"
                    android:id="@+id/btnAlphieTest"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Exercises"
                    android:textSize="18sp"
                    android:textColor="#837d4e"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Test"
                    android:textColor="#837d4e"
                    android:textSize="18sp"
                    android:gravity="center"

                    />
            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>